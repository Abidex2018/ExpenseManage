

@using XPLUG.WEBTOOLKIT
@model ExpenseManager.Helper.ViewModels.RequisitionViewModel



<div class="modal-dialog modal-lg" role="document">
    <form class="modal-content" id="frmEditRequisition" method="post" data_parsley_validate="">
        @Html.Hidden("Id", Model.Id)
        <div class="modal-header">
            <h4 class="modal-title">Expense Details</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link  active" href="#details" role="tab" data-toggle="tab" aria-selected="true">Requisition Details</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#workflow" role="tab" data-toggle="tab">Approval Workflow</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#disbursement" role="tab" data-toggle="tab">Disbursement History</a>
                </li>
              
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="details" style="padding-top:5px">
                    <div class="form-row" style="margin: 2px">
                        <div class="form-group col-md-4">
                            <label>Company</label>
                            <input type="text" class="form-control" value="@Model.CompanyName" readonly>
                        </div>

                        <div class="form-group col-md-4">
                            <label>Department</label>
                            <input type="text" class="form-control" value="@Model.DepartmentName" readonly>
                        </div>
                        <div class="form-group col-md-4">
                            <label>Beneficiary</label>
                            <input type="text" class="form-control" value="@Model.BeneficiaryName" readonly>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Request Title</label>
                            <input type="text" class="form-control" value="@Model.RequestTitle" readonly>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Description</label>
                            <input type="text" class="form-control " value="@Model.ExpenseDescription" readonly>
                        </div>
                        <div class="form-group col-md-4">
                            <label>Expense Item</label>
                            <input type="text" class="form-control" value="@Model.ExpenseItemName" readonly>
                        </div>


                        <div class="form-group col-md-4">
                            <label>Quantity</label>
                            <input type="number" min="1" class="form-control " value="@Model.Quantity" readonly>
                        </div>
                        <div class="form-group col-md-4">
                            <label>Unit Price</label>
                            <input type="number" step="0.01" min="1" class="form-control " value="@Model.UnitPrice" readonly>
                        </div>
                        <div class="form-group col-md-4">
                            <label>Total Amount</label>
                            <input type="text" class="form-control " value="@Model.TotalAmount" readonly>
                        </div>
                        <div class="form-group col-md-4">
                            <label>Created By</label>
                            <input type="text" class="form-control " value="@Model.CreatedName" readonly>
                        </div>
                        <div class="form-group col-md-4">
                            <label>Status</label>
                            <input type="text" class="form-control " value="@Model.StatusLabel" readonly>
                        </div>
                        <div class="form-group col-md-8">
                            <label>Approval Level</label>
                            <input type="text" class="form-control " value="@Model.ApprovalWorkflowNameWithLevel" readonly>
                        </div>
                        <div class="form-group col-md-4">
                            <label>Date Created</label>
                            <input type="text" class="form-control " value="@Model.DateCreated.ToShortDateString()" readonly>
                        </div>
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="workflow">
                    <table class="table table-bordered table-condensed">
                        <tr>

                            <th>
                                <b>User Name</b>
                            </th>
                            <th>
                                <b> Comment</b>
                            </th>
                            <th>
                                <b>Status</b>
                            </th>
                            <th>
                                <b>Date</b>
                            </th>

                        </tr>

                        @foreach (var item in Model.ApprovalWorkflow)
                        {
                            <tr>
                                <td>
                                    @item.UserName
                                </td>
                                <td>
                                    @item.Comment
                                </td>
                                <td>
                                    @item.StatusLabel
                                </td>
                                <td>

                                    @item.DateCreated.ToShortDateString()
                                </td>

                            </tr>
                        }

                    </table>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="disbursement">
                    <table class="table table-bordered table-condensed">
                        <tr>

                            <th>
                                <b>Receiver</b>
                            </th>
                            <th>
                                <b> Opening Balance</b>
                            </th>
                            <th>
                                <b>Paid Out</b>
                            </th>
                            <th>
                                <b> Balance</b>
                            </th>
                            <th>
                                <b>Date</b>
                            </th>

                        </tr>

                        @foreach (var item in Model.DisbursementHistory)
                        {
                            <tr>
                                <td>
                                    @item.ReceiverName
                                </td>
                                <td class="text-right">
                                    @item.OpeningBalance.ToString().ToNaira()
                                </td>
                                <td class="text-right">
                                    @item.AmountPaid.ToString().ToNaira()
                                </td>
                                <td class="text-right">
                                    @item.ClossingBalance.ToString().ToNaira()
                                </td>
                                <td>

                                    @item.DateCreated.ToShortDateString()
                                </td>

                            </tr>
                        }

                    </table>
                </div>

            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fa fa-remove"></i> Close</button>
            
        </div>
    </form>
</div>



 





 

